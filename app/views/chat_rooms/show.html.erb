<h1><%= @chat_room.name %></h1>

<h2>Messages</h2>
<div id="messages">
  <%= render @chat_room.messages %>
</div>

<h3>Send a Message</h3>
<%= form_with(model: [@chat_room, Message.new], local: false) do |form| %>
  <div>
    <%= form.label :content %>
    <%= form.text_area :content, rows: 3 %>
  </div>
  <div>
    <%= form.submit 'Send Message' %>
  </div>
<% end %>

<%= link_to 'Back to Chat Rooms', chat_rooms_path %>